@{
    ViewData["Title"] = "Contact page";
}
<h1>@ViewData["Title"]</h1>

<p>Podaci koji su proslijeđeni iz controller-a: @ViewData["Message"]</p>

<form action="/Home/SubmitQuery" method="post">
    <label for="imePrezime">Ime i prezime:</label><br>
    <input type="text" id="imePrezime" name="imePrezime"><br>

    <label for="email">Email:</label><br>
    <input type="email" id="email" name="email"><br>

    <label for="poruka">Poruka:</label><br>
    <textarea id="poruka" name="poruka"></textarea><br>

    <label for="vrstaPoruke">Vrsta poruke:</label><br>
    <select id="vrstaPoruke" name="vrstaPoruke">
        <option value="Pohvala">Pohvala</option>
        <option value="Upit">Upit</option>
        <option value="Poslovni prijedlog">Poslovni prijedlog</option>
        <option value="Žalba">Žalba</option>
    </select><br>

    <label for="newsletter">Želite li primati newsletter?</label><br>
    <input type="radio" id="da" name="newsletter" value="Da">
    <label for="da">Da</label><br>
    <input type="radio" id="ne" name="newsletter" value="Ne">
    <label for="ne">Ne</label><br>
    <br />
    <input type="submit" value="Pošalji">
</form>
