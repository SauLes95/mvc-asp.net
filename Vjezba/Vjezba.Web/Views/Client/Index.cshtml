@using Vjezba.Web.Mock
@model List<Vjezba.Web.Mock.Client>

<div class="alert alert-info mt-3" id="contactAlert">
    @ViewBag.Message
</div>

<form action="/Client/Details" method="post">
    <label for="clientID">Client ID:</label><br>
    <input type="text" id="ClientID" name="clientID"><br><br>
    <input type="submit" value="Pošalji">
</form>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Client</th>
            <th scope="col">Address</th>
            <th scope="col">Email</th>
            <th scope="col">City</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var client in Model)
        {
            <tr>
                <td>@client.FirstName @client.LastName</td>
                <td>@client.Address</td>
                <td>@client.Email</td>
                <td>
                    @if (client.City == null)
                    {
                        <text> </text>
                    }
                    else
                    {
                        @client.City.Name
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
